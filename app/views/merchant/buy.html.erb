<%= image_tag("MerchantSite1.jpg", :alt => "Merchant Demo Website") %>


<%= form_tag({:controller => "merchant", :action => "result"}, :method => "get", :class => "nifty_form")  do %> 
  <%= label_tag(:amt, "Amount:") %>
  <%= label_tag(:amt_val, "$5.00") %>

  <%= label_tag(:CCType, "Card Type:") %>
  <%= select_tag "payment", options_for_select([ "Visa", "MasterCard", "AMEX", "Discover" ], "Visa") %>

  <%= label_tag(:CC, "Credit Card Number:") %>
  <%= text_field_tag(:CCnum) %>
   
  <%= submit_tag("Submit Payment") %>
<% end %>
